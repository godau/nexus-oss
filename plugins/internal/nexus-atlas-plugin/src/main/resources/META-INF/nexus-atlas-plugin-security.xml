<security>
  <version>2.0.3</version>

  <roles>
    <role>
      <id>atlas</id>
      <name>Atlas: Support Tools</name>
      <description>Gives access to Atlas support tools</description>
      <sessionTimeout>60</sessionTimeout>
      <privileges>
        <privilege>atlas-all</privilege>
      </privileges>
    </role>
  </roles>

  <privileges>
    <privilege>
      <id>atlas-all</id>
      <type>method</type>
      <name>Atlas: Support Tools</name>
      <description>Give permission to use Atlas support tools</description>
      <properties>
        <property>
          <key>method</key>
          <value>*</value>
        </property>
        <property>
          <key>permission</key>
          <value>nexus:atlas</value>
        </property>
      </properties>
    </privilege>
  </privileges>
</security>
